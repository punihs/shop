extends ../layout
block head
  title #{title}
  meta(name='description', content= '#{meta_description}')
  meta(name="keywords" content="#{meta_keywords}")

block content

  section.page_head
    .pagebanner
      img(src="#{s3BaseUrl}/img/banner.jpg", width='100%')
      .banner-cap
        h2 Brands
        h2.text-orange Browse Categories
  section.sellers
    .container
      .row
        .col-md-3
          form.browse_form
            ul
              h3 POPULAR CATEGORIES
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='1', checked='true')
                  | Top 15 Online Stores in India
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='2')
                  | Apparels - Women, Men and Kids
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='3')
                  | Apparels - Only Men
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='5')
                  | Luxury / Designer Wear
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='4')
                  | Kids and Moms
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='6')
                  | Fashion Jewellery
              li
                label
                  input.option-input.radio(type='radio', name='cat', value='7')
                  | Handicrafts, Furniture & Home Decor
              hr(style='border-style: dashed;border-color: #555;')
              h3 OTHER CATEGORIES
                each item in Categories
                  each category in item.categories
                    -var ids=['1', '2', '3', '4', '5', '6', '7']
                    if ids.includes(category.id)

                    else
                      li
                        label
                          input.option-input.radio(
                          type='radio',
                          name='cat',
                          value='#{category.id}',
                          )
                          | #{category.category}
        .col-md-9
          .seller_tab
            ul.nav.nav-tabs.nav-justified(role='tablist')
              li.active(role='presentation')
                a(href='#web', aria-controls='web', role='tab', data-toggle='tab') Top Website Sellers
              li(role='presentation')
                a(href='#fb', aria-controls='fb', role='tab', data-toggle='tab') Top FB/Instagram Sellers
              li(role='presentation')
                a(href='#featured', aria-controls='featured', role='tab', data-toggle='tab') Shoppre Featured Sellers
            .tab-content(style="height:850px")
              #web.tab-pane.fade.in.active(role='tabpanel')
                each item in Categories
                  each subitemweb in item.storesweb
                     p #{subitemweb.name}
                     .col-sm-3
                       .seller_box
                         a(href='#{subitemweb.url}', target='_blank', title='#{subitemweb.Store.name}')
                           span.brand_logo(style="background-image: url('#{s3BaseUrl}/img/stores/#{subitemweb.Store.logo}');")
                         a.myfavstore(href='#', data-clubid='#{subitemweb.Store.id}')
                           i.bookmark-icon
                         if !subitemweb.info
                           span.info(style='background: none')
                         else
                           span.info #{subitemweb.info}
              #fb.tab-pane.fade(role='tabpanel')
                each item in Categories
                  each subitemfbs in item.storesfbs
                    .col-sm-3
                      .seller_box
                        a(href='#{subitemfbs.url}', target='_blank', title='#{subitemfbs.Store.name}')
                          span.brand_logo(style="background-image: url('#{s3BaseUrl}/img/stores/#{subitemfbs.Store.logo}');")
                        a.myfavstore.active(href='#', data-clubid='#{subitemfbs.Store.id}')
                          i.bookmark-icon
                        span.info #{subitemfbs.info}
              #featured.tab-pane.fade(role='tabpanel')
                each item in Categories
                  each subitemfeats in item.storesfeats
                    .col-sm-3
                      .seller_box
                        a(href='#{subitemfeats.url}', target='_blank', title='#{subitemfeats.Store.name}')
                          span.brand_logo(style="background-image: url('#{s3BaseUrl}/img/stores/#{subitemfeats.Store.url}")
                        a.myfavstore.active(href='#', data-clubid='#{subitemfeats.Store.id}')
                          i.bookmark-icon
                        span.info #{subitemfeats.info}
              .ajaxload
  section.signup_free
    .container
      .row
        .col-md-12
          h3
            | So what are you waiting for? Shopp
            span.red re
            | ! Open your big box of happiness today!
          p All you need is a membership to get your Indian Shipping Address immediately!
          a.btn.btn-shoppre(href="#{URLS_MYACCOUNT}/register") sign up for free
  block js_script
  script(src="#{s3BaseUrl}/js/jquery.min.js")
