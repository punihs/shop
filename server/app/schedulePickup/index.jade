                input.form-control(type='text', placeholder='Enter Mobile', name='pc_contact_no')
                .clearfix
            .col-sm-6
              .form-group.label-align
                label Email :
                input.form-control(type='text', placeholder='Enter Email', name='pc_email')
                .clearfix
          h4.head-align
            u PACKAGE INFORMATION :
          .row
            .col-sm-6
              .form-group
                label
                  | Weight Of Package(in kg)
                  span.mendatory_fields *
                  |  :
                input.form-control(type='number', placeholder='Enter package weight', name='package_weight')
                .clearfix
            .col-sm-6
              .form-group.label-align
