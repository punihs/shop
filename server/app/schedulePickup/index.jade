extends ../layout
block head
  title '#{title}'
  meta(name='description', content= '#{meta_description}')
  meta(name="keywords" content="#{meta_keywords}")

block content
  section.timeline
    .container
      #scheduleModel.modal.fade(role='dialog')
        .modal-dialog
          .modal-content
            .modal-body
              .login-content
                h3.head-tag Congratulations !
                h4.head-tag Your Schedule Pickup Request Submitted Successfully.
                .text-center
                  .login-social
                    a.btn.btn-block.btn-shoppre.btn-shoppre-padding(href="#{s3BaseUrl}") Finish
            .modal-footer
      h3 Schedule Your Pickup
      .schedule-container
        form#form-pickup.form-horizontal
          h4.head-align
            u YOUR CONTACT DETAILS :
          .row
            .col-sm-6
              .form-group
                label
                  | First Name
                  span.mendatory_fields *
                  |  :
                input.form-control(type='text', placeholder='Enter first name', name='first_name')
                var errors = ''
                .clearfix
            .col-sm-6
              .form-group.label-align
                label
                  | Last Name
                  span.mendatory_fields *
                  |  :
                input.form-control(type='text', placeholder='Enter last name', name='last_name')

                .clearfix
          .row
            .col-sm-6
              .form-group
                label
                  | Email
                  span.mendatory_fields *
                  |  :
                input.form-control(type='email', placeholder='Enter email', name='user_email')
                .clearfix
            .form-group
              label.control-label.label-padding
                | Phone
                span.mendatory_fields *
              .row
                .col-sm-2
                  select.select2.form-control(name='phone_code')
                    option(value='') Country Code
                     each country in countries
                       option(value='#{country.phone_code}')#{country.iso2}
                       | #{country.phone_code}

                .col-sm-4.box-size
                  input.form-control(type='text', name='mobile', placeholder='Phone Number')
          h4.head-align
            u  PICK-UP ADDRESS :
          .row
            .col-sm-6
              .form-group
                label
                  | First Name
                  span.mendatory_fields *
                  |  :
                input.form-control(type='text', placeholder='Enter first name', name='pc_fname')
                .clearfix
            .col-sm-6
              .form-group.label-align
                label
                  | Last Name
                  span.mendatory_fields *
                  |  :
                input.form-control(type='text', placeholder='Enter last name', name='pc_lname')
                .clearfix
          .row
            .col-sm-6
              .form-group
                label
                  | State
                  span.mendatory_fields *
                  |  :
                select.select2.form-control(name='pc_state')
                  option(value='') Select State
                    each  state in states
                      option(value='#{state.name}')
                        | #{state.name}

                .clearfix
            .col-sm-6
              .form-group.label-align
                label
                  | City
                  span.mendatory_fields *
