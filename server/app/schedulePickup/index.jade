          .other_item_box
            .row
              .col-sm-12
                .form-group
                  label Other Item Detail:
                  input.form-control(type='text', placeholder='Enter Other Item Detail', name='other_items')
                  .clearfix
          h4.head-align
            u DESTINATION ADDRESS :
          .row
            .col-sm-6
              .form-group
                label
                  | Firstname
                  span.mendatory_fields *
                  |  :
                input.form-control(type='text', placeholder='Enter first name', name='dc_fname')
                .clearfix
            .col-sm-6
              .form-group.label-align
                label
