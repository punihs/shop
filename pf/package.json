{
  "name": "api",
  "version": "1.0.0",
  "description": "Shoppre API",
  "main": "server/index.js",
  "scripts": {
    "start": "nodemon --ignore node_modules/ -e js server/app",
    "full-test": "npm run test-pre; npm run test; npm run test-post;",
    "test-pre": "rm logs/*.log; npm run clear-db; npm run migrate; npm run seed; npm run login;",
    "test-post": " npm run bench-api; npm run lint; npm run check-logs",
    "check-logs": "cd logs; for x in *.log; do tput setaf 1;cat $x; tput sgr 0;done; exit 0;",
    "bench-api": "node  ./scripts/githubStatusCheck/after.js",
    "lint": "eslint --fix --ext .js --ignore-path .gitignore ./server",
    "lint-ses": "eslint --fix --ext .js --ignore-path .gitignore ./sesmetrics-sdk",
    "clear-db": "sequelize db:drop; sequelize db:create",
    "migrate": "DEBUG=s.*  sequelize db:migrate;",
    "seed": " DEBUG=s.*  sequelize db:seed:all",
    "socket-monitor": "socket.io-monitor",
    "login": "NODE_ENV=test mocha --opts .mocharc server/components/oauth/express/express.spec.js --exit",
    "test": "NODE_ENV=test nyc --reporter=text mocha --opts .mocharc server/api/**/*.spec.js --exit | grep -v '100'",
    "kill": "kill -9 $(lsof -t -i:5000);",
    "ssh-copy-id": "ssh-copy-id pulse@staging-app1.shoppre.com",
    "clear-bucket": "node server/conn/minio/remove-bucket",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoppre/api.git"
  },
  "author": "Punith H S <punith@shoppre.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shoppre/api/issues"
  },
  "homepage": "https://github.com/shoppre/api#readme",
  "private": true,
  "pre-commit": [
    "lint",
    "npm run full-test"
  ],
  "dependencies": {
    "ajv": "^6.5.0",
    "bcrypt": "^2.0.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bowser": "^1.8.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-rate-limit": "^2.11.0",
    "fastq": "^1.6.0",
    "geoip-lite": "^1.2.1",
    "handlebars": "^4.0.11",
    "helmet": "^3.12.1",
    "jade": "^1.11.0",
    "lodash": "^4.17.4",
    "minio": "^5.0.2",
    "moment": "^2.19.2",
    "morgan": "~1.9.0",
    "mysql2": "^1.5.3",
    "ngeohash": "^0.6.0",
    "node-php-password": "^0.1.2",
    "node-schedule": "^1.3.0",
    "node-webhooks": "^1.4.0",
    "node-xlsx": "^0.12.0",
    "oauth2-server": "quezx/node-oauth2-server",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "response-time": "^2.3.2",
    "sequelize": "^4.37.8",
    "sequelize-cli": "^4.0.0",
    "sharp": "^0.20.5",
    "smartcrop-sharp": "^2.0.3",
    "socket.io": "^2.0.2",
    "socket.io-monitor": "^2.0.1",
    "useragent": "^2.2.1",
    "uuid": "^3.2.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2",
    "winston-raven-sentry": "^1.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.8.0",
    "precommit-hook": "^3.0.0",
    "semantic-release": "^15.7.0",
    "sinon": "^6.1.3",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": "^8.11.0",
    "npm": "^5.6.0"
  },
  "nodemonConfig": {
    "ignore": [
      "docs/*"
    ],
    "delay": "2500"
  }
}
