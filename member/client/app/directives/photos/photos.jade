.modal-header
  .modal-title
    .h3.font-bold.text-info View Photos
      .close(ng-click='$ctrl.cancel()') ×
.modal-body
  .row(ng-show='$ctrl.standardPhotoRequest && !$ctrl.standardAlreadyRequested')
    .col-md-12(ng-show='!$ctrl.standardPhoto')
      .col-md-3.photo-left
        i.fa.fa-camera.big-cam.m-t-md
      .col-md-9
        .panel.b-a.ng-scope
          .panel-heading.b-b.b-light
            h4.font-bold.no-margin Standard Photos - ₹50
          .panel-body
            p View low-resolution photos taken of your package when it arrived at the Shoppre to confirm package cpntents
            a.btn.btn-success.text-u-c(ng-click='$ctrl.continueStandard()') Get Now
  .row.standard-photo(ng-show='$ctrl.standardPhoto')
    .col-md-12.text-center
      .panel.no-margin(set-ng-animate='false')
        div(style='height: 350px')
          div(uib-carousel='', active='active', interval='myInterval', no-wrap='noWrapSlides')
            div(uib-slide='', ng-repeat='slide in $ctrl.slidesStandardObject', index='$index')
              a(target='_blank',href='{{$ctrl.URLS.CDN}}/shoppre/{{slide.object}}')
                img.view-slide-height.img-responsive(ng-src='{{$ctrl.URLS.CDN}}/shoppre/{{slide.object}}', style='margin:auto;height: 330px;')
              .carousel-caption
    a.btn.btn-success.text-u-c.m-l-xs(ng-show='$ctrl.advancedPhoto && $ctrl.advanceStandardRequest', ng-click='$ctrl.showAdvancedPhoto()') View Advanced Photo
  .row(ng-if='$ctrl.standardPhotoRequestSubmit')
    .panel.b-a.ng-scope
      .panel-body
        .alert.alert-warning
          h4.text-center.no-margin
            i.fa.fa-info-circle.m-r-xs
            | Will be charged - ₹50.00 Do you wish to continue?
          .text-center.m-t-md
            a.btn.btn-warning.text-u-c(ng-click='$ctrl.cancel()') Cancel
            a.btn.btn-success.text-u-c.m-l-xs(ng-click='$ctrl.requestStandard()') Continue
  .row(ng-show='$ctrl.standardAlreadyRequested')
    .panel.b-a.ng-scope.text-center
      .panel-body
        .alert.alert-warning
          | Already Requested for Standard photo

  .row(ng-show='$ctrl.advancedPhotoRequest && !$ctrl.advancedAlreadyRequested')
    .col-md-12(ng-show='!$ctrl.advancedPhoto')
      .col-md-3.photo-left
        i.fa.fa-camera.big-cam.m-t-md
      .col-md-9
        .panel.b-a.ng-scope
          .panel-heading.b-b.b-light
            h4.font-bold.no-margin Additional Photos - ₹500
          .panel-body
            p Request high-resolution photo of your content to confirm color, condition and item details
            a.btn.btn-success.text-u-c(ng-click='$ctrl.continueAdditional()') Request Now
  .row.advanced-photo(ng-show='$ctrl.advancedPhoto && !$ctrl.standardPhoto')
    .panel.no-margin(set-ng-animate='false')
      div(style='height: 350px')
        div(uib-carousel='', active='active', interval='myInterval', no-wrap='noWrapSlides')
          div(uib-slide='', ng-repeat='slide in $ctrl.slidesAdvancedObject', index='$index')
            a(target='_blank', href='{{$ctrl.URLS.CDN}}/shoppre/{{slide.object}}')
              img.view-slide-height.img-responsive(ng-src='{{$ctrl.URLS.CDN}}/shoppre/{{slide.object_advanced}}', style='margin:auto;height: 330px;')
            .carousel-caption
    a.btn.btn-success.text-u-c.m-l-xs(ng-show='!$ctrl.standardPhoto && $ctrl.advanceStandardRequest' ng-click='$ctrl.showStandardPhoto()') View Standard Photo
  .row(ng-if='$ctrl.advancedPhotoRequestSubmit')
    .panel.b-a.ng-scope
      .panel-body
        .alert.alert-warning
          h4.text-center.no-margin
            i.fa.fa-info-circle.m-r-xs
            | Will be charged - ₹500.00 Do you wish to continue?
          .text-center.m-t-md
            a.btn.btn-warning.text-u-c(ng-click='$ctrl.cancel()') Cancel
            a.btn.btn-success.text-u-c.m-l-xs(ng-click='$ctrl.requestAdvanced()') Continue
  .row(ng-show='$ctrl.advancedAlreadyRequested')
    .panel.b-a.ng-scope.text-center
      .panel-body
        .alert.alert-warning
          | Already Requested for Advanced photo


