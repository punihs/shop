    <td colspan="2" style="width:640px">
      <p style="font:18px Arial,sans-serif;color:#cc6600;margin:15px 20px 0 20px">Hello {{customer.first_name}},</p> <br>
      <p style="margin:4px 20px 18px 20px;width:640px">
        Your Amount Received From Upstream. ShipmentId is<span class="il">{{shipment.id}}</span>.
        <br>
        <br>
      </p> </td>
  </tr>
{{else if PENALTY_PAYMENT_DONE}}
  <tr>
    <td colspan="2" style="width:640px">
      <p style="font:18px Arial,sans-serif;color:#cc6600;margin:15px 20px 0 20px">Hello {{customer.first_name}},</p> <br>
      <p style="margin:4px 20px 18px 20px;width:640px">
        Your Shipment Penalty Payment Done. ShipmentId is<span class="il">{{shipment.id}}</span>.
        <br>
        <br>
      </p> </td>
  </tr>
{{else if WRONG_ADDRESS_FOLLOW_UP}}
  <tr>
    <td colspan="2" style="width:640px">
      <p style="font:18px Arial,sans-serif;color:#cc6600;margin:15px 20px 0 20px">Hello {{customer.first_name}},</p> <br>
      <p style="margin:4px 20px 18px 20px;width:640px">
