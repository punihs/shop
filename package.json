{
  "name": "api",
  "version": "1.0.0",
  "description": "Shoppre API",
  "main": "server/index.js",
  "scripts": {
    "start": "nodemon --ignore node_modules/ -e js server/app",
    "cluster": "NODE_ENV=production APP_MAIN=server/app.js WORKER_COUNT=4 node server/boot",
    "full-test": "npm run test-pre; npm run test; npm run test-post;",
    "test-pre": "rm logs/*.log; npm run clear-db; npm run migrate; npm run email-deploy; npm run login;",
    "test-post": " npm run bench-api; npm run lint; npm run check-logs",
    "check-logs": "cd logs; for x in *.log; do tput setaf 1;cat $x; tput sgr 0;done; exit 0;",
    "stress-api": "artillery run ./server/api/**/*.artillery.yml",
    "bench-api": "node  ./scripts/githubStatusCheck/after.js",
    "web-test": "NODE_ENV=test nyc mocha --opts .mocharc server/app/**/*.test.js --exit",
    "lint": "eslint --fix --ext .js --ignore-path .gitignore .",
    "clear-db": "sequelize db:drop; sequelize db:create",
    "migrate": "DEBUG=s.*  sequelize db:migrate; DEBUG=s.*  sequelize db:seed:all",
    "socket-monitor": "socket.io-monitor",
    "login": "NODE_ENV=test mocha --opts .mocharc server/api/login/login.spec.js --exit",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --opts .mocharc server/**/*.spec.js --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "kill": "kill -9 $(lsof -t -i:5000);",
    "maildev": "maildev --outgoing-host cp.shoppre.com --outgoing-user 'notifications@cp.shoppre.com' --outgoing-pass 'Easy@2020' --outgoing-port 587",
    "email-build": "node server/emails build",
    "email-update-send": "nodemon  server/emails update-send",
    "email-deploy": "DEBUG=q-* node server/emails deploy",
    "ssh-copy-id": "ssh-copy-id pulse@staging-app1.shoppre.com",
    "tunnel": "ssh -R 5557:localhost:5557 pulse@staging-app1.shoppre.com",
    "clear-bucket": "node server/conn/minio/remove-bucket",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shoppre/api.git"
  },
  "author": "Vikas Kumar <vikas@shoppre.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shoppre/api/issues"
  },
  "homepage": "https://github.com/shoppre/api#readme",
  "private": true,
  "pre-commit": [
    "lint",
    "npm run full-test"
  ],
  "dependencies": {
    "addressparser": "^1.0.1",
    "ajv": "^6.5.0",
    "aws-sdk": "^2.238.1",
    "bcrypt": "^2.0.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "boot.js": "github:quezx/boot.js",
    "bowser": "^1.8.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dialogflow-fulfillment": "^0.3.0-beta.2",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-rate-limit": "^2.11.0",
    "geoip-lite": "^1.2.1",
    "handlebars": "^4.0.11",
    "helmet": "^3.12.1",
    "jade": "^1.11.0",
    "lodash": "^4.17.4",
    "mailcomposer": "^4.0.2",
    "minio": "^5.0.2",
    "moment": "^2.19.2",
    "morgan": "~1.9.0",
    "mysql2": "^1.5.3",
    "ngeohash": "^0.6.0",
    "node-php-password": "^0.1.2",
    "node-xlsx": "^0.12.0",
    "oauth2-server": "quezx/node-oauth2-server",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "request-promise-middleware-framework": "^2.0.0",
    "response-time": "^2.3.2",
    "sequelize": "^4.37.8",
    "sequelize-cli": "^4.0.0",
    "sharp": "^0.20.5",
    "smartcrop-sharp": "^2.0.3",
    "socket.io": "^2.0.2",
    "socket.io-monitor": "^2.0.1",
    "useragent": "^2.2.1",
    "uuid": "^3.2.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2",
    "winston-raven-sentry": "^1.0.1"
  },
  "devDependencies": {
    "artillery": "^1.6.0-21",
    "coveralls": "^3.0.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.8.0",
    "precommit-hook": "^3.0.0",
    "puppeteer": "^1.4.0",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": "^8.11.0",
    "npm": "^5.6.0"
  },
  "nodemonConfig": {
    "ignore": [
      "docs/*"
    ],
    "delay": "2500"
  }
}
