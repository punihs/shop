div.m-t-xl.no-margin
  .hbox#applicantNewdiv
    .m-t-lg
    .wrapper-md.bg-white-only
      div
        .h1.m-l-md.font-thin.h3
          | Update Package Charges
          ul.nav.nav-pills.nav-sm.pull-right
            li.m-r-xs.pull-right
              a.h5.font-bold.b-a.btn-addon.btn-success.text-white-only.b-success.imp(
              ui-sref='package.show({ id: $ctrl.$stateParams.id })'
              popover-trigger="'mouseenter'"
              popover-placement='bottom'
              popover-append-to-body='true'
              )
                span.fa.fa-backward
                span  Go Back
      form.form.form-validation.form-horizontal.wrapper-md(
        name="chargesForm"
        novalidate
        ng-submit='$ctrl.updateCharges(chargesForm)'
        autocomplete='off'
      )
        .row
          .col-md-12.col-sm-12.col-xs-12
            .col-md-12
              .line.line-dashed.b-b.line-lg.pull-in(style='margin: 5px 0;')
              .row
                .col-md-12
                  .col-md-3.col-sm-5.col-xs-12.no-padder
                    label.col-xs-12.input-group
                      | Additional Storage
                      span.text-danger *
                      input.form.form-control(
                        type='number'
                        name='storage_amount'
                        placeholder='eg. 300'
                        ng-model='$ctrl.data.storage_amount'
                        required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.storage_amount.$dirty && chargesForm.storage_amount.$invalid') Please enter Storage Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Wrong Address
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='wrong_address_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.wrong_address_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.wrong_address_amount.$dirty && chargesForm.wrong_address_amount.$invalid') Please enter Wrong Address Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Special Item Handling
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='special_handling_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.special_handling_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.special_handling_amount.$dirty && chargesForm.special_handling_amount.$invalid') Please enter Special Items Handling Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Pickup
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='pickup_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.pickup_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.pickup_amount.$dirty && chargesForm.pickup_amount.$invalid') Please enter Pickup Charge Amount

              .line.line-dashed.b-b.line-lg.pull-in(style='margin: 5px 0;')
              .row
                .col-md-12
                  .col-md-3.col-sm-5.col-xs-12.no-padder
                    label.col-xs-12.input-group
                      | Recieve Email
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='receive_mail_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.receive_mail_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.receive_mail_amount.$dirty && chargesForm.receive_mail_amount.$invalid') Please enter Recieve Email Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Basic Photos
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='basic_photo_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.basic_photo_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.basic_photo_amount.$dirty && chargesForm.basic_photo_amount.$invalid') Please enter Basic Photo Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Advanced Photos
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='advanced_photo_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.advanced_photo_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.advanced_photo_amount.$dirty && chargesForm.advanced_photo_amount.$invalid') Please enter Advanced Photo Amount
                  .col-md-3.col-sm-5.col-xs-12
                    label.col-xs-12.input-group
                      | Split Package
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='split_package_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.split_package_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.split_package_amount.$dirty && chargesForm.split_package_amount.$invalid') Please enter Split Package Amount

              .line.line-dashed.b-b.line-lg.pull-in(style='margin: 5px 0;')
              .row
                .col-md-12
                  .col-md-3.col-sm-5.col-xs-12.no-padder
                    label.col-xs-12.input-group
                      | Scan Document
                      span.text-danger *
                      input.form.form-control(
                      type='number'
                      name='scan_document_amount'
                      placeholder='eg. 300'
                      ng-model='$ctrl.data.scan_document_amount'
                      required
                      )
                      span.wrapper-xs.text-xs.text-danger(ng-show='$ctrl.clickUpload && chargesForm.scan_document_amount.$dirty && chargesForm.scan_document_amount.$invalid') Please enter Scan Document Amount

              .row
                .col-md-12.col-xs-12
                  h4(ng-bind="$ctrl.error.message" style="color:red;")
                  button.btn.btn-success(type='submit' ng-disabled="$ctrl.submitting")
                    span.fa.fa-forward.m-r-sm
                    span.text-white(ng-if='!$ctrl.submitting') Update
                    span(ng-if='$ctrl.submitting')
                      i.fa.fa-spin.fa-circle-o-notch
                      span.text-white &nbsp;&nbsp;Submitting...
    .clearfix

